<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="MenuRadioButton" TargetType="RadioButton">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Foreground" Value="#F5F5F5"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontFamily" Value="/assets/#Inter"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Grid>
                        <ContentPresenter Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!-- Change the size of the circle when checked -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter  Property="Foreground" Value="#08D9D6"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter  Property="Foreground" Value="#08D9D6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>